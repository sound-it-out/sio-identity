@using SIO.Identity.ForgotPassword.Requests
@model ForgotPasswordRequest
@{
    Layout = "../../Shared/Views/_Layout";
    ViewData["Title"] = "Forgot password";
}

<div class="row mb-3">
    <div class="col text-center">
        <img class="logo" src="~/img/logo.svg" />
    </div>
</div>

<form class="form-signin text-center" asp-route="login" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ReturnUrl" />
    <div class="card shadow-lg">
        <div class="card-body">
            @{
                if (!ViewData.ModelState.IsValid)
                {
                    @Html.ValidationSummary(false, "", new { @class = "alert alert-danger text-left" }, "div");
                }
            }

            <div class="form-group mt-3">
                <label for="email" class="sr-only">Email address</label>
                <input asp-for="Email" type="text" class="form-control" placeholder="Email address" required="" autofocus="" autocomplete="off">
            </div>

        </div>
        <div class="card-footer">
            <small class="text-muted">Already have an account? <a href="/login">Click here to login</a>.</small>
        </div>
    </div>
</form>