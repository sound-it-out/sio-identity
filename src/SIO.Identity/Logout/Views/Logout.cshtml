@using SIO.Identity.Logout.Requests
@model LogoutRequest
@{
    Layout = "../../Shared/Views/_Layout";
    ViewData["Title"] = "Logout";
}

<div class="row mb-3">
    <div class="col text-center">
        <img class="logo" src="~/img/logo.svg" />
    </div>
</div>

<form class="form-signin text-center" asp-route="logout" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="LogoutId" />
    <div class="card shadow-lg">
        <div class="card-body">

            <div asp-validation-summary="ModelOnly" class="text-danger mt-3"></div>

            <div class="form-group mt-3">
                <p>Are you sure you want to logout?</p>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" name="button" value="submit" type="submit">Yes</button>
            </div>

        </div>
    </div>
</form>