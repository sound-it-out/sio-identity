@{
    Layout = "../../Shared/Views/_Layout";
    ViewData["Title"] = "Registered";
}

<div class="row mb-3">
    <div class="col text-center">
        <img class="logo" src="~/img/logo.svg" />
    </div>
</div>

<form class="form-signin text-center" asp-route="register" method="post">
    @Html.AntiForgeryToken()
    <div class="card shadow-lg">
        <div class="card-body">

            <div asp-validation-summary="ModelOnly" class="text-danger mt-3"></div>

            <div class="form-group mt-3">
                <p>You have successfully registered, but before you can get started you will need to verify your email address. Check your inbox and you should recieve an email shortly</p>
            </div>
        </div>
        <div class="card-footer">
            <small class="text-muted"><a href="/login">Click here to login</a>.</small>
        </div>
    </div>
</form>